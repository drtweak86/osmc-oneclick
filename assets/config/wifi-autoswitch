# Default configuration for OneClick Wi-Fi autoswitcher (streaming-friendly)

WIFI_IFACE="wlan0"

# Streaming thresholds
STREAM_RSSI_DBM=-68     # warn if weaker (more negative)
MIN_SIGNAL_PCT=55       # approximate ConnMan % equivalent
WARN_SIGNAL_PCT=60

# Loop cadence (seconds)
RUN_EVERY_SEC=120

# Toasts
KODI_NOTIFY=1

# Preferred SSIDs (priority order)
PREFERRED_SSIDS=("Batcave" "Turtle")

# Switching logic
AUTO_SWITCH=1           # 1=enable autoswitch
SWITCH_DELTA_DB=5       # need this many dB improvement to switch
